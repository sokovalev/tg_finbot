{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Классификация транзакции без комментария",
  "additionalProperties": false,
  "type": "object",
  "title": "ExpenseTransaction",
  "required": ["amount", "currency", "category"],
  "properties": {
    "amount": {
      "description": "Сумма транзакции",
      "type": "number",
      "minimum": 0
    },
    "currency": {
      "default": "RUB",
      "description": "Код валюты (ISO 4217)",
      "type": "string",
      "enum": ["RUB", "USD", "EUR", "CNY", "KZT", "BYN", "GEL", "TRY", "THB"]
    },
    "category": {
      "description": "Категория расхода",
      "type": "string",
      "enum": [
        "Продукты",
        "Кафе и рестораны",
        "Доставка еды",
        "Алкоголь и табак",
        "Такси",
        "Общественный транспорт",
        "Автомобиль: Топливо",
        "Автомобиль: Обслуживание",
        "Аренда жилья",
        "ЖКУ и счета",
        "Интернет и связь",
        "Товары для дома",
        "Ремонт и мебель",
        "Одежда и обувь",
        "Красота и уход",
        "Медицина и лекарства",
        "Спорт",
        "Образование и книги",
        "Развлечения",
        "Подписки и сервисы",
        "Техника и электроника",
        "Путешествия и отели",
        "Подарки",
        "Питомцы",
        "Дети",
        "Кредиты и долги",
        "Налоги и штрафы",
        "Страховки",
        "Инвестиции",
        "Благотворительность",
        "Прочее"
      ]
    }
  }
}
